{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "module": "es6",
    "outDir": "./dist/",
    "lib": [
      "dom",
      "es6",
      "dom.iterable",
      "scripthost",
      "esnext.asynciterable",
      "es2018.promise",
      "es2016.array.include"
    ],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src/",
    "typeRoots": ["./src/typings", "./node_modules/@types"]
  },
  "include": ["./src/"]
}
