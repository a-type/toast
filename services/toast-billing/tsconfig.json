{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "moduleResolution": "node",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2015.promise",
      "esnext.asynciterable",
      "dom"
    ],
    // temp until they sort stuff out... https://github.com/firebase/firebase-admin-node/issues/358
    "skipLibCheck": true
  },
  "include": ["./src/**/*"]
}
