{
  "compilerOptions": {
    "outDir": "./build",
    "allowJs": true,
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2016.array.include",
      "es2017",
      "es2015.promise",
      "esnext.asynciterable",
      "dom"
    ]
  },
  "include": ["./src/**/*"]
}
